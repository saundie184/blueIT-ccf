<h1>{{title}}</h1>
<h2>{{subtitle}}</h2>

<div>
  <table class='table table-hover'>
    <thead>
      <th>
        Topic
      </th>
      <th>
        Title
      </th>
      <th>
        Article
      </th>
      <th>
        Username
      </th>
    </thead>
    {{#each posts}}
        <tr>
          <td>
            {{this.topic}}
          </td>
          <td>
            <a href="/auth/{{id}}">{{this.title}}</a>
          </td>
          <td>
            {{this.text}}
          </td>
          <td>
            {{this.username}}
          </td>
        </tr>

    {{/each}}

  </table>
</div>
